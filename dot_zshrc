################################################################################
################################################################################
# OVVERIDES ZSH command not found handler
################################################################################
################################################################################

command_not_found_handler() {
  local input="$1 ${*:2}"
  local cmd
  cmd="$("$HOME/.local/bin/cnf-claude" "$input" 2>/dev/null)" || return 127

  if [[ -n "$cmd" ]]; then
    print "[llm] $cmd"
    read -r "?Run this command? [Y/n] " reply
    if [[ "$reply" == [Yy]* ]] || [[ -z "$reply" ]]; then
      eval "$cmd"
    fi
    return 0
  fi

  return 127
}

