printf "sourcing .profile\n"

##########################
# Platform Specifics
##########################

if uname -r | grep -q 'microsoft'; then
	export WSL="1"
	export LINUX="1"
	[ -f "${HOME}/.shell.wsl" ] && . "${HOME}/.shell.wsl"
elif [ "$(uname)" = "Darwin" ]; then
	sdkpath=$(xcrun --show-sdk-path)
	export MACOS="1"
	export SDKROOT="$sdkpath"
	export XDG_CONFIG_HOME=$HOME/.config
else
	export LINUX="1"
fi
